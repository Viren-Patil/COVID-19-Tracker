<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/gradient_bg"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:textColor="@color/colorTotalRecovered"
            android:layout_gravity="center"
            tools:text="30 Jan"
            style="@style/LabelFontStyle"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/LabelFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTotalConfirmed"
            android:textSize="17sp"
            android:text="Total Confirm:"/>

        <TextView
            android:id="@+id/tvTotalTimelineConfirm"
            style="@style/LabelFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorTotalConfirmed"
            android:textSize="17sp"
            tools:text="234" />

        <TextView
            style="@style/LabelFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorTotaldeaths"
            android:textSize="17sp"
            android:text="Total Deaths:"/>

        <TextView
            android:id="@+id/tvTotalTimelineDeaths"
            style="@style/LabelFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorTotaldeaths"
            android:textSize="17sp"
            tools:text="7" />
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>